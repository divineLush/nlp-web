<% layout('./layouts/base.eta') %>

<% if(it.text.markup === 0) { %>
    <h1 class="textcenter">there is no such text</h1>
<% } %>

<section class="text-result slidein">
    <% it.text.markup.forEach(function(entry) { %>
        <span class="tag p-05-1 _background _<%= entry.label %>">
            <%= entry.token %>&nbsp;
            <span class="tagname">
                <%= entry.label %>
            </span>
        </span>
    <% }) %>
</section>
